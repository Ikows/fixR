{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}


{% block body %}

    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img src="{{ user.photo }}" alt="" class="avatar-large mb-3">
                <br>
                <span class="badge badge-primary">{{ article.auteur.articles|length }} articles</span>
            </div>
            <div class="col-9">
                <h1>{{ user.prenom }} {{ user.nom }}</h1>
                {% if user is same as (app.user) %}
                    <div class="mt-3">
                        <a href="#" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="#" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>

        {{ user.description|raw }}

        <hr>

        <h2>Les annonces de {{ user.prenom }} {{ user.nom }}</h2>

        {% if user.articles|length > 0 %}
            <div class="row">
                {% for article in user.articles %}
                    {# AJOUTER #}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p>
                    <strong>{{ user.prenom }} {{ user.nom }}</strong> n'a pas encore d'articles sur le site !
                </p>
            </div>
        {% endif %}
    </div>

{% endblock %}