{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/debat.css">
{% endblock %}

{% block body %}
    <div class="container">
            <h2 class="text-center mb-4">{{ article.title }}</h2>
            <img style="height: 40vh; width: 100%; border-radius: 10px;" src="{{ article.image }}">
            <hr class="my-4">
            {{ article.contenu|raw }}
            <p class="pluspetit">Ecrit par {{ article.auteur.nom }} {{ article.auteur.prenom }}, le : {{ article.createdAt|date('d M Y à h:i') }}</p>

        <div class="jumbotron">
            <h4>Le débat aura lieu du 22 au 24 décembre</h4>
            <br>
            <div class="row">
                <div class="col">
                    <p>Utilisateurs inscrits :</p>
                    <ul>
                        <li>Jeremy-Farid</li>
                        <li>Vincent-François</li>
                        <li>Et Bob</li>
                    </ul>
                </div>
                <div class="col">
                    <p>Il reste : <br> <span class="h2">4</span> places</p>
                </div>
                <div class="col"><a class="btn btn-secondary btn-lg d-block my-auto" href="#" role="button">Participer au débat !</a>
                </div>
            </div>
        </div>

        <h2 class="text-center">Place du débat</h2>
        <br>
        {% for reaction in article.reactions %}
            <div class="row">
                <div class="col-9">
                    <div class="card text-white bg-secondary mb-3" style="max-width: 100%;">
                        <div class="card-header">{{ reaction.user.nom }} <span class="float-right">{{ reaction.createdAt|date('Y-m-d') }}</span></div>
                        <div class="card-body">
                            <p class="card-text">{{ reaction.contenu | raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <br>
        <div>
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <input class="btn btn-secondary float-right" type="submit" value="Envoyer" name="submit">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
