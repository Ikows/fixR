{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/home.css">
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light d-block text-center">
        <a class="navbar-brand" href="#"><p class="brand justify-content-center">Fix.R</p></a>
    </nav>

    <div class="container connect">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1 class="text-center">Connectez-vous !</h1>

                    <form action="#" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" id="email" class="form-control" placeholder="Adresse email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group button">
                            <a href="#">
                                <button type="submit" class="btn btn-secondary">Se connecter</button>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}