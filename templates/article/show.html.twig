{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/showArticle.css">
{% endblock %}

{% block body %}

    <div class="ad-title" style="background-image: url({{ article.image }})">
        <div class="container">
            <h1>{{ article.title }}</h1>
        </div>
    </div>

    <div class="container corpArticle">
        <div class="row">
            <div class="col-md-8 mb-3">
                {{ article.contenu | raw }}
                <a href="#">
                    <button type="button" class="btn btn-secondary">DÃ©bat</button>
                </a>
            </div>
            <div class="col-sm-12 col-md">
                {% set a = article.auteur %}
                <div class="row">
                    <div class="col-md-3">
                        <a href="#"><img class="avatar" src="{{ a.photo }}" alt="avatar de {{ a.nom }}{{ a.prenom }}"></a>
                    </div>
                    <div class="col">
                        <a href="{{ path("profile_journalist", {'slug': article.auteur.slug}) }}" style="color: white">
                            <h3>{{ a.prenom }} {{ a.nom }}</h3>
                        </a>
                        <span class="badge badge-primary">{{ a.articles|length }} articles</span>
                    </div>
                </div>
                {{ a.description|raw }}
            </div>
        </div>
    </div>

{% endblock %}
